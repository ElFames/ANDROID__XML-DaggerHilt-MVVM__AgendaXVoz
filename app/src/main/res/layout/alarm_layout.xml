<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        tools:text="16/09/2023" />

    <TextView
        android:id="@+id/name"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintBottom_toTopOf="@id/viewAlarm_button"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16sp"
        android:fontFamily="serif"
        tools:text="Nombre de la tareaaaaa" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/state"
        android:textColor="@color/black"
        android:layout_marginEnd="50dp"
        android:textSize="18sp"
        android:fontFamily="serif"
        tools:text="11" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/hours"
        app:layout_constraintStart_toEndOf="@id/hours"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:text=":" />

    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/hours"
        app:layout_constraintStart_toEndOf="@id/separator"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="serif"
        tools:text="30" />

    <TextView
        android:id="@+id/labelState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/state"
        app:layout_constraintStart_toStartOf="@id/state"
        app:layout_constraintEnd_toEndOf="@id/state"
        android:textColor="@color/grey"
        android:textSize="11sp"
        android:paddingTop="15dp"
        android:fontFamily="serif"
        tools:text="Pending" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/minutes"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        tools:text="ðŸ”´" />

    <Button
        android:id="@+id/viewAlarm_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editAlarm_button"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="detalles"
        android:textSize="11dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:backgroundTint="@color/background_button"
        android:layout_width="120dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/editAlarm_button"
        app:layout_constraintStart_toEndOf="@id/viewAlarm_button"
        app:layout_constraintEnd_toStartOf="@id/completeAlarm_button"
        app:layout_constraintTop_toTopOf="@+id/viewAlarm_button"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="editar"
        android:visibility="gone"
        android:textSize="11dp"
        android:backgroundTint="@color/background_button"
        android:layout_width="120dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/completeAlarm_button"
        app:layout_constraintStart_toEndOf="@id/editAlarm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewAlarm_button"
        android:layout_marginStart="10dp"
        android:text="completada"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:visibility="gone"
        android:textSize="11dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/background_button"
        android:layout_width="120dp"
        android:layout_height="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>